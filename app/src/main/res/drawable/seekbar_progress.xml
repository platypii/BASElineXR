<?xml version="1.0" encoding="utf-8"?>
<!-- Seekbar progress drawable with GPS (green) and Video (blue) track visualization -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#444444" />
            <corners android:radius="4dp" />
            <size android:height="8dp" />
        </shape>
    </item>
    
    <!-- Secondary progress (can be used for buffering or video range) -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#555588" />
                <corners android:radius="4dp" />
                <size android:height="8dp" />
            </shape>
        </clip>
    </item>
    
    <!-- Primary progress (current playback position) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#66BB66" />
                <corners android:radius="4dp" />
                <size android:height="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>
