<?xml version="1.0" encoding="utf-8"?>
<!-- Main Menu: Heading Controls + Sub-menu Access -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:clickable="false"
    android:focusable="false">

    <GridLayout
        android:id="@+id/headingMenuGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:rowCount="5"
        android:padding="4dp"
        android:clickable="false"
        android:focusable="false">

    <!-- Row 1: Sub-menu Access Buttons (3 buttons) -->
    <Button
        android:id="@+id/wind_menu_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Wind"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/polars_menu_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Polars"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/settings_menu_button"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Settings"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <!-- Row 2: Heading Control - Top Row -->
    <Button
        android:id="@+id/tail_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Tail"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/north_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="N"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/fwd_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Nose"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <!-- Row 3: Heading Control - Middle Row -->
    <Button
        android:id="@+id/west_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="W"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/center_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="Center"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/east_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="E"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <!-- Row 4: Heading Control - Bottom Row -->
    <Button
        android:id="@+id/yaw_minus_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="-5°"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/south_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="S"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <Button
        android:id="@+id/yaw_plus_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="2dp"
        android:background="@drawable/button_bg"
        android:text="+5°"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    </GridLayout>

</LinearLayout>
