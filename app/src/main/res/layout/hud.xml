<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hudPanel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:padding="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text="BASEline XR"
            android:drawableStart="@drawable/wingsuit"
            android:drawablePadding="4dp"
            android:textColor="#cccccc"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lat_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:layout_marginEnd="100dp"
            android:lines="1"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|end"
        android:background="@drawable/button_bg"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/extraControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:background="#000000"
        android:visibility="gone">

        <Button
            android:id="@+id/yaw_minus_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="-5°"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/yaw_plus_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="+5°"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reset_north_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="North"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fwd_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="Fwd"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tail_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button_bg"
            android:text="Tail"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>
