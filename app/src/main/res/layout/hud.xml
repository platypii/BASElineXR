<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:gravity="left"
    android:orientation="vertical"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:id="@+id/hudPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="170dp"
        android:background="#000000"
        android:padding="4dp"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text="BASEline XR"
            android:drawableStart="@drawable/wingsuit"
            android:drawablePadding="4dp"
            android:textColor="#cccccc"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lat_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:layout_marginEnd="100dp"
            android:lines="1"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Button container background to fill the right side -->
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="end"
        android:clickable="false"
        android:focusable="false">

        <Button
            android:id="@+id/play_controls_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_bg"
            android:text="▶"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/record_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_bg"
            android:text="⏺ Rec"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/heading_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_bg"
            android:text="Heading"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@drawable/button_bg"
            android:text="Exit"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Dynamic Menu Container -->
    <FrameLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false" />

    <!-- Play Controls Popup Container (separate from menu system) -->
    <FrameLayout
        android:id="@+id/playControlsPopupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <include
            layout="@layout/play_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</FrameLayout>
