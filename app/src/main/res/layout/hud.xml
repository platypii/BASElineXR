<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hudPanel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000000"
        android:padding="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text="BASEline XR"
            android:drawableStart="@drawable/wingsuit"
            android:drawablePadding="4dp"
            android:textColor="#cccccc"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lat_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:layout_marginEnd="100dp"
            android:lines="1"
            android:drawablePadding="5dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineHeight="18dp"
            android:text=""
            android:textColor="#cccccc"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="top|end"
        android:background="@drawable/button_bg"
        android:text="Exit"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/extraControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/tail_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="Tail"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/north_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="N"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/fwd_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="Nose"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/west_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="W"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp" />

            <Button
                android:id="@+id/east_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="E"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/yaw_minus_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="-5°"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/south_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="S"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <Button
                android:id="@+id/yaw_plus_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_bg"
                android:text="+5°"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </GridLayout>

    </LinearLayout>

</FrameLayout>
