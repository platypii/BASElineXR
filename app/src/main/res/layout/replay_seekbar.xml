<?xml version="1.0" encoding="utf-8"?>
<!-- Replay Seekbar: Timeline scrubber for GPS + Video playback -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seekbarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#CC000000">

    <!-- Current time tooltip (follows thumb position) -->
    <LinearLayout
        android:id="@+id/currentTimeTooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/tooltip_bg"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/currentTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="12:34:56 PM"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Jan 15, 2024"
            android:textColor="#CCCCCC"
            android:textSize="11sp" />

    </LinearLayout>

    <!-- GPS Labels (above seekbar) -->
    <FrameLayout
        android:id="@+id/gpsLabelsFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/gpsStartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS Start"
            android:textColor="#88FF88"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/gpsEndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS End"
            android:textColor="#88FF88"
            android:textSize="10sp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Seekbar with markers -->
    <FrameLayout
        android:id="@+id/seekbarFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SeekBar
            android:id="@+id/replaySeekBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:min="0"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:splitTrack="false"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- GPS Start Marker (green line) -->
        <View
            android:id="@+id/gpsStartMarker"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="#88FF88"
            android:visibility="gone" />

        <!-- GPS End Marker (green line) -->
        <View
            android:id="@+id/gpsEndMarker"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="#88FF88"
            android:visibility="gone" />

        <!-- Video Start Marker (blue line) -->
        <View
            android:id="@+id/videoStartMarker"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="#8888FF"
            android:visibility="gone" />

        <!-- Video End Marker (blue line) -->
        <View
            android:id="@+id/videoEndMarker"
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:background="#8888FF"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Video Labels (below seekbar) -->
    <FrameLayout
        android:id="@+id/videoLabelsFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/videoStartLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Start"
            android:textColor="#8888FF"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/videoEndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video End"
            android:textColor="#8888FF"
            android:textSize="10sp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Duration labels row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/elapsedTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="0:00"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="0:00"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
