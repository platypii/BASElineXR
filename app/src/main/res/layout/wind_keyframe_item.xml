<?xml version="1.0" encoding="utf-8"?>
<!-- Wind Keyframe Item - Display Only -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyframe_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#252525"
    android:padding="4dp"
    android:layout_marginBottom="1dp">

    <!-- Keyframe indicator (diamond shape for keyframe) -->
    <TextView
        android:id="@+id/keyframe_indicator"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:text="◆"
        android:textColor="#00BFFF"
        android:textSize="10sp"
        android:gravity="center" />

    <!-- Altitude -->
    <TextView
        android:id="@+id/keyframe_altitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="3000ft"
        android:textColor="#FFD700"
        android:textSize="11sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Wind Speed -->
    <TextView
        android:id="@+id/keyframe_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="15 mph"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:gravity="center" />

    <!-- Wind Direction -->
    <TextView
        android:id="@+id/keyframe_direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="270°"
        android:textColor="#66BB6A"
        android:textSize="11sp"
        android:gravity="center" />

    <!-- Inclination -->
    <TextView
        android:id="@+id/keyframe_inclination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="0°"
        android:textColor="#888888"
        android:textSize="11sp"
        android:gravity="center" />

</LinearLayout>
