<?xml version="1.0" encoding="utf-8"?>
<!-- Wind Layer Item - Display Only (controls moved to external panel) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:padding="3dp"
    android:background="#1E1E1E">

    <!-- Layer Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:background="#2A2A2A"
        android:padding="2dp">

        <TextView
            android:id="@+id/layer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Layer 1"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />

        <!-- Selection indicator (shown when this layer is selected for editing) -->
        <TextView
            android:id="@+id/layer_selected_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◆"
            android:textColor="#00FF00"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />

        <!-- Active indicator (shown when this is the altitude-based active layer) -->
        <TextView
            android:id="@+id/layer_active_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Altitude Range -->
    <TextView
        android:id="@+id/altitude_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2000-3000ft"
        android:textColor="#E0E0E0"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="#2F2F2F"
        android:padding="3dp"
        android:layout_marginBottom="1dp" />

    <!-- Data Boundary Range -->
    <TextView
        android:id="@+id/data_boundary_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data: 1800-3200ft"
        android:textColor="#FFD700"
        android:textSize="10sp"
        android:textStyle="italic"
        android:background="#3A3A00"
        android:padding="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center" />

    <!-- Wind Data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#252525"
        android:padding="4dp"
        android:layout_marginTop="1dp">

        <!-- Saved Wind Data (only show the type that was saved) -->
        <TextView
            android:id="@+id/saved_wind_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS: 15 MPH @ 270°"
            android:textColor="#66BB6A"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="#0D1F0D"
            android:padding="3dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>