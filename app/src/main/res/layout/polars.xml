<?xml version="1.0" encoding="utf-8"?>
<!-- Polars Configuration Menu -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:id="@+id/polarsMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:clickable="false"
        android:focusable="false">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Polars Configuration"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#00000000" />

        <!-- Polar Type Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <Button
                android:id="@+id/select_wingsuit"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text=" Wingsuit"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/select_canopy"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text=" Canopy"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="@drawable/button_bg"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/select_airplane"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text=" Airplane"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="@drawable/button_bg"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Include sections -->
        <include layout="@layout/polars_wingsuit" />
        <include layout="@layout/polars_canopy" />
        <include layout="@layout/polars_airplane" />

    </LinearLayout>
</ScrollView>
